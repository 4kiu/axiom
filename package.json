name: Build Project

on:
  push:
    branches: [ "main" ]

jobs:
  build:
    runs-on: ubuntu-latest

    steps:
      - name: Checkout repository
        uses: actions/checkout@v4 # This puts your files at the root level

      - name: Setup Node.js
        uses: actions/setup-node@v4
        with:
          node-version: '20'
          cache: 'npm'
          # Use the default root path since axiom is the repo name
          cache-dependency-path: package-lock.json 

      - name: Install dependencies
        run: npm ci

      - name: Build project
        run: npm run build
